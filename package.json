{
  "name": "@callbacksystems/focus-trap",
  "version": "0.1.0",
  "description": "A JavaScript utility for effective focus trapping within a specified element.",
  "module": "dist/focus-trap.js",
  "main": "dist/focus-trap.js",
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/callbacksystems/focus-trap.git"
  },
  "keywords": [
    "accessibility",
    "A11Y",
    "Focus Trap",
    "Focus Trapping"
  ],
  "author": "Callback Systems",
  "contributors": [
    "Bruno Prieto <brunoprietog@hey.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/callbacksystems/focus-trap/issues"
  },
  "homepage": "https://github.com/callbacksystems/focus-trap#readme",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist/*",
    "build": "bin/build.js",
    "watch": "esbuild --watch --bundle --format=esm --outfile=dist/focus-trap.js src/index.js",
    "release": "npm run build && npm publish",
    "start": "node tests/server.mjs",
    "test": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "esbuild": "^0.25.8",
    "express": "^5.1.0"
  }
}
